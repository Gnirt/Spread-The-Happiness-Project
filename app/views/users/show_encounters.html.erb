<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <section>
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Encounters:</b> <%= @encounters.count %></span>
    </section>
  </aside>
	<div style='width: 800px;' class="span12">
	  <div id="map" style='width: 940px; height: 400px;'></div>
	</div>
  <% if @encounters.any? %>
    <ul class="encounter">
			<% @encounters.each do |e| %>
			<li>
				<%= e.address %>
				<%= User.find_by(id: e.user1_id).name %>
				<%= User.find_by(id: e.user2_id).name %>
				<%= e.latitude %>
				<%= e.longitude %>
			<% end %>
			</li>
    </ul>
  <% end %>
</div>

<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<script type='text/javascript'>
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
	markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
</script>