<% unless current_user?(@user) || current_user.encounter_list.any?{|e| (e.user1_id == @user.id || e.user2_id == @user.id)} %>

	<%= form_for(current_user.encounter.build(user2_id: @user.id)) do |f| %>

		<%= render 'shared/error_messages', object: f.object %>

  	<%= f.hidden_field :user2_id %>
		<%= f.hidden_field :latitude %>
		<%= f.hidden_field :longitude %>
		
		<%= f.label :date %>
		<%= f.text_field :date, :placeholder => "Date of encounter", :class => 'datepicker' %>

		<%= f.label :address %>
  	<%= f.text_field :address, :placeholder => "Ex : Paris, france" %>

		<%= f.submit "Create encounter", class: "btn btn-primary" %>
	<% end %>
	<%= stylesheet_link_tag "bootstrap-datepicker" %>
	<%= javascript_include_tag "bootstrap-datepicker"%>
	<%= javascript_include_tag "datepicker"%>
<% end %>